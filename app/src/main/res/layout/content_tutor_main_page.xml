<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mamadou.tutor.TutorMainPage"
    tools:showIn="@layout/activity_tutor_main_page2">

    <TextView
        android:background="@color/whiteForPink"
        android:padding="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/black"
        android:id="@+id/bestTutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Competences"/>
    <ImageButton
        android:layout_centerInParent="true"
        android:layout_below="@+id/bestTutor"
        android:id="@+id/imageTutor1"
        android:src="@drawable/competence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageTutor1"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:paddingLeft="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/addIcon"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_toRightOf="@id/addIcon"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:id="@+id/addCompetence"
            android:text="Add Competence"
            android:textSize="25dp" />
    </RelativeLayout>
    <GridLayout
        android:background="@color/whiteForPink"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="5"
        android:stretchMode="spacingWidth">
        <ImageButton
            android:background="#F0FFF0"
            android:layout_marginRight="40dp"
            android:id="@+id/myTutors"
            android:src="@drawable/ic_local_library_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="#F0FFF0"
            android:layout_marginRight="40dp"
            android:id="@+id/calendarIcon"
            android:src="@drawable/ic_event_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="#F0FFF0"
            android:layout_marginRight="40dp"
            android:id="@+id/account"
            android:src="@drawable/ic_account_balance_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="#F0FFF0"
            android:layout_marginRight="40dp"
            android:id="@+id/addOffer"
            android:src="@drawable/ic_grade_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="#F0FFF0"
            android:id="@+id/registerForTutoring"
            android:src="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textColor="@color/black"
            android:text="Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:text="Calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:text="Bills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:text="Evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:text="Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </GridLayout>
</RelativeLayout>
